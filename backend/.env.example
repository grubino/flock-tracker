DATABASE_URL=postgresql://username:password@localhost:5432/flock_tracker
HOST=0.0.0.0
PORT=8000
DEBUG=false
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# OCR Settings
OCR_ENGINE=easyocr  # Options: tesseract, easyocr
OCR_USE_GPU=false  # Enable GPU acceleration for EasyOCR (requires CUDA)

# EasyOCR Layout Parameters (for better text grouping)
# x_ths: Horizontal threshold - higher values group text more aggressively on same line (default: 1.0)
# y_ths: Vertical threshold - higher values group text more aggressively vertically (default: 0.5)
# For receipts: x_ths=1.0 keeps items and prices together, y_ths=0.5 keeps lines separate
OCR_X_THS=1.0
OCR_Y_THS=0.5
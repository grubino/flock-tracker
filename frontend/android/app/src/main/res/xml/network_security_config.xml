<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Trust custom certificate for local development server -->
    <domain-config>
        <domain includeSubdomains="true">192.168.1.144</domain>
        <trust-anchors>
            <!-- Trust our self-signed certificate -->
            <certificates src="@raw/flock_tracker_cert"/>
            <!-- Also trust system certificates -->
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>

    <!-- Default configuration for other domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>
